<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <!--
        Added the entity CapacidadProduccion.
    -->
    <changeSet id="20150406104714" author="jhipster">
        <createTable tableName="T_CAPACIDADPRODUCCION">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="capacidad" type="decimal(10,2)">
                <constraints nullable="false" />
            </column>
            <column name="velocidad" type="decimal(10,2)">
                <constraints nullable="false" />
            </column>
            <column name="maquina_id" type="bigint"/>
            <column name="medidaslts_id" type="bigint"/>
            <column name="producto_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="maquina_id"
                                 baseTableName="T_CAPACIDADPRODUCCION"
                                 constraintName="fk_capacidadproduccion_maquina_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_MAQUINA"/>

        <addForeignKeyConstraint baseColumnNames="medidaslts_id"
                                 baseTableName="T_CAPACIDADPRODUCCION"
                                 constraintName="fk_capacidadproduccion_medidaslts_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_MEDIDASLTS"/>

        <addForeignKeyConstraint baseColumnNames="producto_id"
                                 baseTableName="T_CAPACIDADPRODUCCION"
                                 constraintName="fk_capacidadproduccion_producto_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_PRODUCTO"/>

    </changeSet>
</databaseChangeLog>
